<div class="panel panel-default">
  <!-- Featured image -->
  <%= image_tag(post.featured_image, class: 'img-responsive') if post.featured_image %>

  <!-- Post title -->
  <div class="panel-heading">
    <h4><%= link_to post.title, buttercms_post_path(post.slug), :title => post.title %></h4>
  </div>

  <div class="panel-body">
    <!-- Post author -->
    by <%= link_to "#{post.author.first_name} #{post.author.last_name}", buttercms_author_path(post.author.slug) %>

    <!-- Post summary -->
    <p><%= post.summary %></p>

    <!-- Post categories -->
    <% post.categories.each do |category| %>
      <%= link_to category.name, buttercms_category_path(category.slug), :title => category.name %>
    <% end %>
  </div>
</div>
